
<%= link_to 'New Province', new_province_path %>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
 
  <% @provinces.each do |province| %>
    <tr>
      <td><%= province.id %></td>
      <td><%= province.name %></td>
      <td><%= link_to 'Show', province_path(province) %></td>
      <td><%= link_to 'Edit', edit_province_path(province) %></td>
      <td><%= link_to 'Destroy', province_path(province), method: :delete, data: {confirm: ' Are you sure?'} %></td>
    </tr>
  <% end %>
</table>